#!/usr/bin/perl

use DateTime;
use Data::Dump;
sub {
    my $req = shift;

    warn "SPD-消费交易got req<<<<<<<<:\n";
    Data::Dump->dump($req);
    my $res = { %$req } ;
    $res->{tcode} = $req->{tcode} . '-r';
    $res->{resp}  = '00';
    $res->{stlmnt_date} = DateTime->now()->ymd();

    warn "SPD-消费应答snd res>>>>>>>>:\n";
    Data::Dump->dump($res);
    return $res;
};


__END__

